<p id="notice"><%= notice %></p>
<div class="show_page">
<h1><%= @usuario.name %></h1>
<div class="span5">
  <h2>Tu Información</h2>

  <!-- User Info -->
  <div class="user_info_title">Dirección de interés:</div>
  <div class="user_info"><%= @usuario.address %></div>

  <div class="user_info_title">Correo electrónico:</div>
  <div class="user_info"><%= @usuario.email_address %></div>

</div>

  <div class="span7">
    <h2>Crímenes al rededor de tu dirección de interés</h2>
    <ul>
    <% for charater in @charaters %>
      <li><%= link_to charater.tipo, charater %> (<%= charater.distance.to_f.round(2) %> kilometros)</li>
    <% end %>
    </ul>
  </div>
</div>


  <%= gmaps({
       "map_options" => {:id => "map2", 
        "auto_adjust" => false,
        "center_latitude" => @usuario.latitude, 
        "center_longitude" => @usuario.longitude, 
        "detect_location" => false, 
        "center_on_user" => false,
        "zoom" => 16},
        "markers"     => {"data" => @json1 }
      
      })
%>



<%= link_to 'Edit', edit_usuario_path(@usuario) %> |
<%= link_to 'Back', usuarios_path %>
</div>


