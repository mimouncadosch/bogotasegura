<div class="email_reg_message">

  <h1><%= @charater.tipo %></h1></p>
  <h2><%= @charater.date %>
      <%= @charater.neighborhood %></h2>
  <h2><%= @charater.address %></h2>
  <p><%= @charater.description %></p>
</div>

<h2>Cr√≠menes reportados al rededor</h2>

<div class="crime_list span4">
  <ul>
  <% for charater in @charater.nearbys(10) %>
    <ol><%= link_to charater.tipo, charater %> (<%= charater.distance.to_f.round(2) %> km)</ol>
  <% end %>
  </ul>
</div>

<div class="span8">
  
     <%= gmaps({
             "map_options" => {:id => "map2", 
              "auto_adjust" => false,
              "center_latitude" => @charater.latitude, 
              "center_longitude" => @charater.longitude, 
              "detect_location" => false, 
              "center_on_user" => false,
              "zoom" => 14},
              "markers"     => {"data" => @json1 }
            })
      %>
</div>